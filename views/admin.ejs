<%- include("../partials/adminNavbar.ejs") %>
    <!-- Main Content Start-->

    <main class="mt-5 pt-3">
        <div class="container-fluid">
            <div class="row">
                
                <div class="col-md-12 fw-bold fs-3">Dashboard</div>
                <div class="col-md-3 m-auto">
                    <div class="card text-bg-primary mb-3 text-center" style="max-width: 18rem;">
                        <div class="card-body">
                            <p class="card-text fw-bold fs-2">15</p>
                            <hr>
                            <h5 class="card-title">Active User</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 m-auto">
                    <div class="card text-bg-secondary mb-3 text-center" style="max-width: 18rem;">
                        <div class="card-body">
                            <p class="card-text fw-bold fs-2">4</p>
                            <hr>
                            <h5 class="card-title">Active Plans</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 m-auto">
                    <div class="card text-bg-success mb-3 text-center" style="max-width: 18rem;">
                        <div class="card-body">
                            <p class="card-text fs-2 fw-bold">8</p>
                            <hr>
                            <h5 class="card-title">Active Subscriber</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">Data Table</div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Plan</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% allUser.forEach(function(users , index) { %>
                                    <tr>
                                        <th scope="row"> <%= index+1 %></th>
                                        <td><%= users.name %></td>
                                        <td><%= users.email %></td>
                                        <td>none</td>
                                    </tr>
                                    <% }) %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Main Content End -->

    <%- include("../partials/script") %>

        </html>