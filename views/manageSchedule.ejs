<%- include("../partials/adminNavbar.ejs") %>
<main class="mt-5 pt-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 fw-bold fs-3">Manage Schedule</div>
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">Data Table</div>
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">title</th>
                            <th scope="col">Plan Name</th>
                            <th scope="col">Time</th>
                            <th scope="col">Link</th>
                            <th scope="col"></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% schedule.forEach(function (allSchedule , index) { %>
                            <tr>
                              <th scope="col"> <%= index + 1 %> </th>
                              <td><%= allSchedule.title %></td>
                              <td><%= allSchedule.plan.name %></td>
                              <td><%= allSchedule.time %></td>
                              <td><a href="<%= allSchedule.link %>">Link</a></td>
                              <td>
                                  <a href="" class="btn btn-warning">Update</a>
                                  <a href="/manageSchedule/delete/<%= allSchedule._id %>"  class="btn btn-danger">Delete </a>
                              </td>
                            </tr>
                          <% }) %>
                         
                        </tbody>
                      </table>
                    </div>
                </div>
            </div>
        </div>
</main>

<%- include("../partials/script") %>