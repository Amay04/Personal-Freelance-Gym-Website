<%- include("../partials/adminNavbar.ejs") %>
    <!-- Main content -->
    <main class="mt-5 pt-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 fw-bold fs-3">Queries</div>
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">Data Table</div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Contact</th>
                                    <th>Message</th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                <% query.forEach(function(queries , index) { %>
                                    <tr>
                                        <th scope="row">
                                            <%= index+1 %>
                                        </th>
                                        <td>
                                            <%= queries.name %>
                                        </td>
                                        <td>
                                            <%= queries.email %>
                                        </td>
                                        <td>
                                            <%= queries.number %>
                                        </td>
                                        <td>
                                            <%= queries.message %>
                                        </td>
                                        <td><a href="/query/delete/<%= queries._id %>" class="btn btn-danger">Delete
                                            </a></td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include("../partials/script") %>